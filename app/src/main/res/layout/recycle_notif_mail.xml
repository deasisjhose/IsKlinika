<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/border_square_notif"
    android:gravity="center_vertical"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/layout_notifBg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/border_circle"
        android:backgroundTint="@color/primary_blue"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_notifIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_mail"
            android:tint="@color/white" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notifMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="TextView"
            android:textColor="@color/information_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_notifDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinpro"
            android:paddingLeft="8dp"
            android:text="TextView"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>