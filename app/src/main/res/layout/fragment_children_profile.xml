                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawableTint="@color/violet"
                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Contact"
                    android:textColor="@color/primary_Text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_guardianEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/helvetica"
                    android:hint="No info available"
                    android:textColor="@color/information_text"
                    android:textSize="12sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_guardianContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/helvetica"
                    android:hint="No info available"
                    android:textColor="@color/information_text"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_healthInformation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_healthInformation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_bottom"
                    android:drawableLeft="@drawable/ic_baseline_business_24"
                    android:drawableTint="@color/red"
                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Healthcare Provider Information"
                    android:textColor="@color/primary_Text"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_editHealthC"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/primary_blue" />

                <ImageButton
                    android:id="@+id/btn_saveHealthc"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/check_ic"
                    android:visibility="gone" />
            </TableRow>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_child_friendly_24"
                android:drawableTint="@color/pink"
                android:fontFamily="@font/dinpro"
                android:gravity="center_vertical"
                android:text="Pediatrician"
                android:textColor="@color/primary_Text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_pPedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:editable="false"
                android:fontFamily="@font/helvetica"
                android:hint="No info available"
                android:textColor="@color/information_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                    android:drawableTint="@color/yellow"
                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/primary_Text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
