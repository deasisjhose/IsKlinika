                <EditText
                    android:id="@+id/tv_pediaEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/helvetica"
                    android:hint="No info available"
                    android:textColor="@color/information_text"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tv_pediaContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/helvetica"
                    android:hint="No info available"
                    android:textColor="@color/information_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView62"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical"
                android:text="Dentist"
                android:textColor="#494949"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_pDentist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:editable="false"
                android:fontFamily="@font/helvetica"
                android:hint="No info available"
                android:text="No info available"
                android:textColor="@color/information_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                    android:drawableTint="@color/yellow"
                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/primary_Text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawableTint="@color/violet"
                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Contact Number"
                    android:textColor="@color/primary_Text"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_dentistEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:editable="false"
                    android:fontFamily="@font/helvetica"
