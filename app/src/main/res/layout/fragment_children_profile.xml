    <view
        android:id="@+id/card_healthcare"
        class="com.google.android.material.card.MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:outlineAmbientShadowColor="@color/tertiary_blue"
        android:outlineProvider="background"
        android:outlineSpotShadowColor="@color/tertiary_blue"
        app:cardBackgroundColor="@color/accent_layout"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
