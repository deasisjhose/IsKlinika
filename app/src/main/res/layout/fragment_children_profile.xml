                    android:fontFamily="@font/dinpro"
                    android:gravity="center_vertical"
                    android:text="Age"
                    android:textColor="@color/primary_Text"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
