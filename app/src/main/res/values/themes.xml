    <style name="Theme.IsKlinika.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.IsKlinika.NavigationDrawer"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:state_checked">@color/green</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.LeftTab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.RightTab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Center" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/pastel_purple</item>
        <item name="colorSecondary">@color/pastel_yellow</item>
    </style>

    <style name="SCBSwitch" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/hint</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#66575757</item>
    </style>


    <style name="Widget.Material3.Button.ProfileToggle" parent="">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">9sp</item>
        <item name="font">@font/helvetica</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/black</item>
    </style>


    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/pastel_bluegreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

</resources>